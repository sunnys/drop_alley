<html>
  <head>
    <title>Admin</title>
    <!-- Uncomment to just use the bare bones torch styles rather than the theme -->
    <!--<link rel="stylesheet" href="<%= DropAlleyWeb.Router.Helpers.static_path(@conn, "/torch/base.css") %>">-->
    <link rel="stylesheet" href="<%= DropAlleyWeb.Router.Helpers.static_path(@conn, "/torch/theme.css") %>">
  </head>

  <body class="<%= Torch.PageView.body_classes(@conn) %>">
    <header>
      <section id="torch-account-info">
        <div class="torch-container">
          <a href="/">user@infinite.red</a>
          <a href="/">Logout</a>
        </div>
      </section>

      <section id="torch-nav">
        <div class="torch-container">
          <div class="torch-logo">
            <a href="/">
              <h3>Torch</h3>
            </a>
          </div>
          <nav class="torch-nav">
            <!-- nav links here -->
            <a href="/admin/users">User</a>
            <a href="/admin/user_identities">UserIdentity</a>
            <a href="/admin/invitations">Invitation</a>
          </nav>
        </div>
      </section>
    </header>

    <%= Torch.FlashView.render("_flash_messages.html", assigns) %>
    <%= render @view_module, @view_template, assigns %>
    <script src="<%= DropAlleyWeb.Router.Helpers.static_path(@conn, "/torch/torch.js") %>"></script>
  </body>
</html>

