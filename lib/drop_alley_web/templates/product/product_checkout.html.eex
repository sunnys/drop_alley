<%= form_for @conn, DropAlleyWeb.Router.Helpers.book_order_path(@conn, :book_order, @product), [as: :order], fn f -> %>
    <div class="container-fluid limited mb-5">
        <div class="row">
        <div class="col-sm-12 col-md-8 offset-md-2">
            <h4>Please enter your details here</h4>
            <hr>
            <div class="form-row">
            <%= hidden_input f, :size, class: "form-control", value: @conn.params["size"] %>
            <div class="form-group col-md-6">
                <%= label f, :first_name,"First Name", class: "control-label" %>
                <%= text_input f, :first_name, class: "form-control" %>
                <%= error_tag f, :first_name %>
            </div>
            <div class="form-group col-md-6">
                <%= label f, :last_name,"Last Name", class: "control-label" %>
                <%= text_input f, :last_name, class: "form-control" %>
                <%= error_tag f, :last_name %>
            </div>
            <div class="form-group col-md-6">
                <%= label f, :addr,"Address", class: "control-label" %>
                <%= text_input f, :addr, class: "form-control" %>
                <%= error_tag f, :addr %>
            </div>
            <div class="form-group col-md-6">
                <%= label f, :street,"Street", class: "control-label" %>
                <%= text_input f, :street, class: "form-control" %>
                <%= error_tag f, :street %>
            </div>
            <div class="form-group col-md-6">
                <%= label f, :country,"Country", class: "control-label" %>
                <%= text_input f, :country, class: "form-control" %>
                <%= error_tag f, :country %>
            </div>
            <div class="form-group col-md-6">
                <%= label f, :pincode,"Pincode", class: "control-label" %>
                <%= text_input f, :pincode, class: "form-control" %>
                <%= error_tag f, :pincode %>
            </div>
            <div class="form-group col-md-6">
                <%= label f, :city,"City", class: "control-label" %>
                <%= text_input f, :city, class: "form-control" %>
                <%= error_tag f, :city %>
            </div>
            <div class="form-group col-md-6">
                <%= label f, :state,"State", class: "control-label" %>
                <%= text_input f, :state, class: "form-control" %>
                <%= error_tag f, :state %>
            </div>
            <div class="form-group col-md-6">
                <%= label f, :contact_no,"Contact Number", class: "control-label" %>
                <%= text_input f, :contact_no, class: "form-control" %>
                <%= error_tag f, :contact_no %>
            </div>
            <div class="form-group col-md-6">
                <%= label f, :email,"Email", class: "control-label" %>
                <%= text_input f, :email, class: "form-control" %>
                <%= error_tag f, :email %>
            </div>
            <div class="form-group col-12 text-right">
                <%= submit class: "btn btn-theme"  do %>
                    Bid & Buy<i class="material-icons">arrow_forward</i>
                <% end %>
            </div>
            </div>
        </div>
        
        </div>
    </div>
<% end %>